#------------------------------------------------------------------------------#
#                                                                              #
#                               DECLARATIONS                                   #
#                                                                              #
#------------------------------------------------------------------------------#

#------------------------------------#
#             COMPILATION            #
#------------------------------------#

NAME = mutantstack

CC = c++
CFLAG = -Wall -Wextra -Werror -g3 -std=c++98

#------------------------------------#
#               HEADERS              #
#------------------------------------#

HEADER		=	MutantStack.hpp \
				MutantStack.tpp

#------------------------------------#
#          SOURCES AND CLASSES       #
#------------------------------------#

SRC		=	main.cpp

#------------------------------------#
#               OBJECTS              #
#------------------------------------#

OBJ			=	$(SRC:.cpp=.o)

#------------------------------------#
#               SUMMARY              #
#------------------------------------#

INC_FLAG	= -I.
LD_FLAG	=

#------------------------------------------------------------------------------#
#                                                                              #
#                                   RULES                                      #
#                                                                              #
#------------------------------------------------------------------------------#

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAG) $(LD_FLAGS) $(OBJ) -o $(NAME)

$(OBJDIR)%.o: $(SRCDIR)%.cpp $(HEADER)
	@mkdir -p `dirname $@`
	$(CC) $(CFLAG) -c $< -o $@ $(INC_FLAG)

$(OBJDIR)%.o: $(CLDIR)%.cpp $(HEADER)
	@mkdir -p `dirname $@`
	$(CC) $(CFLAG) -c $< -o $@ $(INC_FLAG)

clean:
	rm -rf $(OBJ)

fclean: clean
	rm -rf $(NAME)

re: fclean all

run: $(NAME)
	./$(NAME)

.PHONY: all clean fclean re run
