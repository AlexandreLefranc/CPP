CC := c++

NAME := serialisation

CFLAGS := -Wall -Wextra -Werror -std=c++98 -Wshadow

###############################################################################

MAIN := main.cpp

###############################################################################

all : 				$(NAME)

$(NAME) :			main.cpp
	$(CC) $(CFLAGS) $^ -o $(NAME)

###############################################################################

fclean :
	$(RM) $(NAME)

clean: fclean

re : clean fclean all

###############################################################################

.PHONY : all clean fclean re
